<h2 align="center">Title: <%= @aticle.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
<% if @aticle.user %>
<ul class="listing">
<div class="row center">
<div class="col-md-4 col-md-offset-4">
<li>Created by:</li>
<li><%= link_to gravatar_for(@aticle.user), user_path(@aticle.user) %></li>
<li class="article-title">
<%= link_to @aticle.user.username, user_path(@aticle.user) %>
</li>
<li><small>
<%= pluralize(@aticle.user.aticles.count, "article") if @aticle.user.aticles %>
</small></li>
</div>
</div>
</ul>
<% end %>
<h4 class="center description"><strong>Description:</strong></h4>
<hr>
<%= simple_format(@aticle.description) %>
<div class="article-actions">
<% if logged_in? && (current_user == @aticle.user || current_user.admin?) %>
<%= link_to "Edit this article", edit_aticle_path(@aticle), class: "btn btn-xs btn-primary" %>
<%= link_to "Delete this article", aticle_path(@aticle), method: :delete,
data: { confirm: "Are you sure you want to delete the article?"},
class: "btn btn-xs btn-danger" %>
<% end %>
<%= link_to "View all articles", aticles_path, class: "btn btn-xs btn-success" %>
</div>
</div>