<h1 align="center">Listing all articles</h1>


<% @aticles.each do |aticle| %>

<div class="row">
<div class="col-xs-8 col-xs-offset-2">
<div class="well well-lg">
    
  <div class="article-title">
    <%= link_to aticle.title, aticle_path(aticle) %>
  </div>
  <div class="article-body">
   <%= truncate(aticle.description, length: 100) %>
  </div>

<div class="article-meta-details">
<small>Created by: <%= aticle.user.username if aticle.user%>,
<%= time_ago_in_words(aticle.created_at) %> ago,
last updated: <%= time_ago_in_words(aticle.updated_at) %> ago</small>
</div>

<div class="article-actions">
    <%= link_to 'Edit this Article', edit_aticle_path(aticle), class: "btn btn-xs btn-primary" %>
    <%= link_to 'Delete this Article', aticle_path(aticle), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-xs btn-danger" %>
</div>
</div>
</div>
</div>

<% end %>
